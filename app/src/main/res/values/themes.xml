<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Grupo1_TP3" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/rojo</item>
        <item name="colorPrimaryVariant">@color/rojo</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/azul</item>
        <item name="colorSecondaryVariant">@color/azul</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/rojo</item>
        <!-- Title text color -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="Theme.Grupo1_TP3" parent="Base.Theme.Grupo1_TP3" />

    <style name="Theme.Grupo1_TP3.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Grupo1_TP3.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Grupo1_TP3.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>